<div class="container my-3">
    <div class="row">
        <div class="col-lg-4 col-md-6 mx-auto">
            <div class="card">
                <div class="card-header text-center">
                    <span class="font-weight-light lead">Sign-in</span>
                </div>
                <div class="card-body">
                    <form action="/login" method="post">
                        <div class="form-group">
                            <label for="email">Email address</label>
                            <input value="{{email}}" name="email" class="form-control" type="text" placeholder="Enter email">
                        </div>
                        <div class="form-group">
                            <label for="password">Password</label>
                            <input name="password" class="form-control" type="password" placeholder="Password">
                        </div>
                        <button type="submit" class="btn btn-success btn-block font-weight-light">Sign-in</button>
                    </form>
                    <p class="text-muted text-center small font-weight-light mt-2">By signing-in, you agree to NodeJob's
                        <a href="#">Terms of Use</a> and
                        <a href="#">Privacy Policy</a>.
                    </p>
                    <hr>
                    <p class="font-weight-light mb-0">Dont have an account?
                        <a href="/employer/register" class="badge badge-success">Register here</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>