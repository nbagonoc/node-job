<div class="list-group sticky-top mb-3">
    <a href="/dashboard" class="list-group-item list-group-item-action">
        <i class="fas fa-home mr-1"></i>Dashboard
    </a>

    <!-- check if user role is admin -->
    {{#isEqual user.role "admin"}}
    <a href="/jobs/manage" class="list-group-item list-group-item-action">
        <i class="fas fa-cogs mr-1"></i>Manage Jobs
    </a>
    <a href="/users/manage" class="list-group-item list-group-item-action">
        <i class="fas fa-user-cog mr-1"></i>Manage Users
    </a>
    {{/isEqual}}
    <!-- /check method -->

    <!-- check if user role is moderator -->
    {{#isEqual user.role "moderator"}}
    <a href="/jobs/manage" class="list-group-item list-group-item-action">
        <i class="fas fa-cogs mr-1"></i>Manage Jobs
    </a>
    {{/isEqual}}
    <!-- /check method -->

    <!-- check if user role is employer -->
    {{#isEqual2 user.role "employer"}}
    <a href="/jobs/employer" class="list-group-item list-group-item-action">
        <i class="fas fa-file-alt mr-1"></i>My Job Posts
    </a>
    <a href="/jobs/employer/create" class="list-group-item list-group-item-action pl-4">
        <i class="fas fa-plus-circle pl-3 mr-1"></i>Create Job Post
    </a>
    <a href="/users/employer/profile/{{user.id}}" class="list-group-item list-group-item-action">
        <i class="fas fa-building mr-1"></i>Profile
    </a>
    <a href="/users/employer/profile/build" class="list-group-item list-group-item-action pl-4">
        <i class="fas fa-cogs pl-3 mr-1"></i>Build Profile
    </a>
    <a href="/account" class="list-group-item list-group-item-action">
        <i class="fas fa-cog mr-1"></i>Account
    </a>
    {{/isEqual2}}
    <!-- /check method -->

    <!-- check if user role is applicant -->
    {{#isEqual user.role "applicant"}}
    <a href="/jobs/applicant" class="list-group-item list-group-item-action">
        <i class="fas fa-file-alt mr-2"></i>My Job Applications
    </a>
    <a href="/users/applicant/profile/{{user.id}}" class="list-group-item list-group-item-action">
        <i class="fas fa-user-tie mr-2"></i>Profile
    </a>
    <a href="/users/applicant/profile/build" class="list-group-item list-group-item-action pl-4">
        <i class="fas fa-user-cog pl-3 mr-1"></i>Build Profile
    </a>
    <a href="/account" class="list-group-item list-group-item-action">
        <i class="fas fa-cog mr-1"></i>Account
    </a>
    {{/isEqual}}
    <!-- /check method -->
</div>